<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragments.user_page">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_user"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:text="User Email"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <TextView
            android:id="@+id/mobile_no"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="3dp"
            android:text="Address"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@+id/username"
            app:layout_constraintStart_toStartOf="@+id/username"
            app:layout_constraintTop_toBottomOf="@+id/username" />

        <TextView
            android:id="@+id/status_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@+id/mobile_no"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="@+id/mobile_no"
            app:layout_constraintTop_toBottomOf="@+id/mobile_no" />

        <Button
            android:id="@+id/basket"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#00E5FF"
            android:text="Basket"
            app:layout_constraintEnd_toEndOf="@+id/status_user"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="@+id/status_user"
            app:layout_constraintTop_toBottomOf="@+id/status_user" />

        <Button
            android:id="@+id/orders"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#00E5FF"
            android:text="orders"
            app:layout_constraintEnd_toEndOf="@+id/basket"
            app:layout_constraintStart_toStartOf="@+id/basket"
            app:layout_constraintTop_toBottomOf="@+id/basket" />

        <Button
            android:id="@+id/main_menu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#00E5FF"
            android:text="main menu"
            app:layout_constraintEnd_toEndOf="@+id/orders"
            app:layout_constraintStart_toStartOf="@+id/orders"
            app:layout_constraintTop_toBottomOf="@+id/orders" />

        <Button
            android:id="@+id/logout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="logout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/main_menu"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/main_menu"
            app:layout_constraintTop_toBottomOf="@+id/main_menu"
            app:layout_constraintVertical_bias="0.221" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>